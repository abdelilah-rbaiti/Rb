@Library('jenkins_shared_library@main') _
pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            steps {
                script {
                    gitCheckout(
                        branch: 'main',
                        url: 'https://github.com/abdelilah-rbaiti/Rb.git'
                    )
                }
            }
        }
    }
        stage('Checkout') {
            steps {
                // Check out your source code from version control
                checkout scm
            }
        }

        stage('Unit Tests') {
            steps {
                script {
                    sh 'mvn clean test'
                }
                post {
                    always {
                        junit '**/target/surefire-reports/TEST-*.xml'
                    }
                }
            }
        }
}
